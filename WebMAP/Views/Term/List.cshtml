@model IEnumerable<Domain.Entity.term>

@{
    ViewBag.Title = "List terms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<table class="table table-striped- table-bordered table-hover dataTable no-footer dtr-inline" id="archivetable">
    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.project.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resource.firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dailyFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberofDaysTerm)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.project.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.resource.firstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dailyFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numberofDaysTerm)
                </td>
                <td>
                    @Html.ActionLink("Terminer", "Terminate", new { idProject = item.idProject, idResource = item.idResource,mail = item.resource.email })

                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#archivetable').DataTable();
        });
    </script>
}