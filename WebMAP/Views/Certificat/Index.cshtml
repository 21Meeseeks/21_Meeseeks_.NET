@model IEnumerable<WebMAP.Models.CertificatVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-portlet m-portlet--mobile">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
        <thead>
            <tr>
                <th>Description</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.result)
            {
                <tr>
                    <td>
                        @item.descriptionCertificate
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.idCertificate }) |
                        @Html.ActionLink("Details", "Details", new { id = item.idCertificate }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.idCertificate })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
