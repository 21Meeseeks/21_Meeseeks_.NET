
@{
    ViewBag.Title = "Resources Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<div class="row">
    @Html.Action("Map", "ResourceStat")
</div>
<div class="row">
    <div class="col-sm-4">
        <div class="m-portlet">
            <!--begin:: Widgets/Revenue Change-->
            <div class="m-widget14">
                <div class="m-widget14__header">
                    <h3 class="m-widget14__title">
                        Employee VS Freelancer 
                    </h3>
                    <span class="m-widget14__desc">
                        Employee and Freelancer Among Levio
                    </span>
                </div>
                <div class="row  align-items-center">
                    <div class="col">
                        <div id="donut_example" class=" m-widget14__chart1" style="height: 180px">
                        </div>
                    </div>

                </div>
            </div>

            <!--end:: Widgets/Revenue Change-->
        </div>

    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryunobtrusive") @*For unobtrusive-ajax*@
        @Scripts.Render("~/bundles/jqueryval") @*For validate and validate-unobtrusive*@
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    }
    <script>
        new Morris.Donut({
            element: 'donut_example',
            data: [
              { label: "Employee", value: @ViewBag.countemployee},
              { label: "Freelancer", value: @ViewBag.countfreelancer}
            ]
        });
    </script>
          @Html.Action("DynamicRation", "ResourceStat")
        
   
    </div>
