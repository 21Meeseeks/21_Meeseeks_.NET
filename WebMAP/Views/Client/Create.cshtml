@model WebMAP.Models.Client

@{
    ViewBag.Title = "Add a new client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

						<!--begin::Portlet-->
<div class="m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                   Enter informations about  the client
                </h3>
            </div>
        </div>
    </div>

    <!--begin::Form-->
@using (Html.BeginForm("Create", "Client", FormMethod.Post,
                                                    new { enctype = "multipart/form-data", id = "m_form_1", @class = "m-form m-form--fit m-form--label-align-right" }))
{
    @Html.AntiForgeryToken()
        <div class="m-portlet__body">

            <div class="m-form__content">
                <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="m_form_1_msg">
                    <div class="m-alert__icon">
                        <i class="la la-warning"></i>
                    </div>
                    <div class="m-alert__text">
                        Oh snap! Change a few things up and try submitting again.
                    </div>
                    <div class="m-alert__close">
                        <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label class="col-form-label col-lg-3 col-sm-12">Email *</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { placeholder = "Enter your email", @class = "form-control m-input" } })
                    <span class="m-form__help">We'll never share your email with anyone else.</span>
                </div>
            </div>

            <div class="form-group m-form__group row">
                <label class="col-form-label col-lg-3 col-sm-12">PASSWORD *</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    <div class="input-group">
                        @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control m-input", placeholder = "Enter your password" } })
                    </div>
                    <span class="m-form__help">Please enter your Password.</span>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label class="col-form-label col-lg-3 col-sm-12">NAME *</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    @Html.EditorFor(model => model.clientName, new { htmlAttributes = new { @class = "form-control m-input", placeholder = "Enter Name" } })
                    <span class="m-form__help">Please enter Client's Name.</span>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label class="col-form-label col-lg-3 col-sm-12">ADDRESS *</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control m-input", placeholder = "Enter your address" } })
                    <span class="m-form__help">Please enter your Address.</span>
                </div>
            </div>

            <div class="form-group m-form__group row">
                <label class="col-form-label col-lg-3 col-sm-12">Phone</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    <div class="input-group">
                        @Html.EditorFor(model => model.phoneNumber, new { htmlAttributes = new { @class = "form-control m-input", placeholder = "Enter your phone number" } })

                        <div class="input-group-append"><a href="#" class="btn btn-brand"><i class="la la-phone"></i></a></div>
                    </div>
                    <span class="m-form__help">Please enter your phone number</span>
                </div>
            </div>

            @if(ViewBag.result!=null)
            { 
            <div class="form-group m-form__group row">
                <label class="col-form-label col-lg-3 col-sm-12">Category*</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    <div class="input-group">
                        <select id="category" class="form-control m-input">
                            @foreach (var item in ViewBag.result)
                            {
                                <option>@item.name</option>
                            }

                        </select>  
                    </div>
                    <span class="m-form__help">Please enter your phone number</span>
                </div>
            </div>

            }
            <div class="form-group m-form__group row">
                <label class="col-form-label col-lg-3 col-sm-12">LOGO</label>
                <div class="col-lg-4 col-md-9 col-sm-12">
                    <div class="input-group">
                        <input type="file" name="file" id="file" class="custom-file-input form-control m-input">
                        <label class="custom-file-label" for="customFile">Choose a photo</label>        </div>
                    <span class="m-form__help">Please choose an image. </span>
                </div>
            </div>
      </div>

        <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions">
                <div class="row">
                    <div class="col-lg-9 ml-lg-auto">
                        <input type="submit"  class="btn btn-success" value="Validate" />
                    </div>
                </div>
            </div>
        </div>

}
    <!--end::Form-->
</div>
<script>
    $(document).ready(function () {
        $(".m-menu__item--active").removeClass("m-menu__item--active");
    });
    
</script>













<!--end::Portlet-->